{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "lib": ["dom", "es2019", "ESNext"],
    "module": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
